<% if (title) { %>
  <h1><%= title %></h1>
<% } else {res.redirect('/')} %>

<%# messages() %>

<form method="POST" action="/account/login" id="login-form">
    <fieldset>
        <legend>Account Login</legend>

        <label for="account_email">Email:</label>
        <input type="email" name="account_email" id="account_email" required>

        <label for="account_password">Password:</label>
        <input type="password" name="account_password" id="account_password" required>

        <button type="submit" id="login-button">Login</button>
    </fieldset>
    <input type="hidden" name="action" value="login">
    <p>No account? <a href="/account/sign-up">Sign-up</a></p>
</form>