<% if (title) { %>
  <h1><%= title %></h1>
<% } else {res.redirect('/')} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/account/register" method="POST" id="register-form">
    <fieldset>
        <legend>Register</legend>

        <label for="account_firstname">First Name:</label>
        <input type="text" name="account_firstname" id="account_firstname" required>

        <label for="account_lastname">Last Name:</label>
        <input type="text" name="account_lastname" id="account_lastname" required>

        <label for="account_email">Email:</label>
        <input type="email" name="account_email" id="account_email" placeholder="Enter a valid email address" required>

        <label for="account_password">Password:</label>
        <div class="validPassword">There must be at least 12 characters, one must be a number, one must be a lowercase letter, one must be a capital letter, and one must be a non-alphanumeric character.</div>
        <div class="password-container">
            <input type="password" name="account_password" id="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required>
            <button type="button" id="pswdBtn">ğŸ‘</button>
        </div>

        <button type="submit" id="register-button">Register</button>
    </fieldset>
    <input type="hidden" name="action" value="register">
</form>